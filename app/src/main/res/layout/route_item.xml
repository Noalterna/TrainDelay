<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    >
    <GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/routeDataBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow"
        android:columnCount="3"
        android:gravity="center"
        android:rowCount="2"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/arrivalHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:text="12:30"
            android:textColor="@color/colorHour"
            android:textSize="28sp"
            app:fontFamily="@font/pt_serif_bold" />

        <TextView
            android:id="@+id/delayInMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="(+10 min)"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:fontFamily="@font/bitter"
 />

        <TextView
            android:id="@+id/carrierIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorSKM"
            app:fontFamily="@font/roboto"
            android:padding="8dp"
            android:text="SKM"
            android:textColor="@color/onPrimary" />

        <TextView
            android:id="@+id/trainRoute"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/noData"
            android:textColor="#B7B7B7"
            android:textSize="14sp"
            app:fontFamily="@font/roboto" />
    </GridLayout>
</androidx.cardview.widget.CardView>
